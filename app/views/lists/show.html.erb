<h1><%= @list.name %></h1>
<p><%= @list.description %></p>

<% @list.tasks.each do |task| %>
  <div class="card-task">
    <p><%= task.title %></p>
    <p><%= task.description %></p>
    <p><%= link_to 'Edit task', edit_task_path(task) %></p>
  </div>
<% end %>

<%= link_to 'Add task', new_list_task_path(@list) %>
<%= link_to 'Edit list', edit_list_path(@list) %>
<%= link_to 'Delete list', list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to 'Back', lists_path %>
