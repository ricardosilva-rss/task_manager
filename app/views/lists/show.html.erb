<h1><%= @list.name %></h1>
<p><%= @list.description %></p>

<% @list.tasks.each do |task| %>
  <div class="card-task">
    <%= task.title %>
    <%= task.description %>
  </div>
<% end %>

<%= link_to 'Edit list', edit_list_path(@list) %>
<%= link_to 'Delete list', list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to 'Back', lists_path %>
