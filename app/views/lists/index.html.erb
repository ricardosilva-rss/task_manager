<h1>My lists</h1>

<div class="cards-list">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="card-list">
        <h2><%= list.name %></h2>
        <p><%= list.description %></p>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to 'Create new list', new_list_path %>
